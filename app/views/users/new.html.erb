<%= form_for @user, :html => {:class => 'signup-form'} do |f| %>
  <%= f.text_field :name, :placeholder => "Name", :autofocus => 'true', :required => 'true' %>
  <%= f.text_field :email, :placeholder => "Email address", :required => 'true' %>
  <%= f.password_field :password, :placeholder => "Password", :required => 'true' %>
  <%= f.password_field :password_confirmation, :placeholder => "Password, again", :required => 'true' %>
  <%= f.submit "Sign me up!", :class => "btn" %>
<% end %>
<article>
  <h1><%= @article.title %></h1>
  <%= markdown(@article.text) %>
  
  <footer>
    <p>Written by <%= @author.name %></p>
  </footer>
</article>

<h2>Comments</h2>
<%= render @article.comments %>
 
<h2>Add a comment:</h2>
<%= render 'comments/form' %>
 
<%= link_to 'Edit', edit_article_url(@article) %> |
<%= link_to 'Back', articles_url %>